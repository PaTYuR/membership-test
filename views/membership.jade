extends layout

block content
  header(class="bg-white")
    nav(class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8", aria-label="Global")
      div(class="flex lg:flex-1")
        a(href="#", class="-m-1.5 p-1.5")
          span(class="sr-only") Your Company
          img(class="h-8 w-auto", src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600", alt=)
      if variant == 'none'
        div(class="hidden lg:flex lg:gap-x-12")
          a(href="/membership", class="text-sm font-semibold leading-6 text-gray-900") Membership
      else
        div(class="hidden lg:flex lg:gap-x-12")
          a(href="/", class="text-sm font-semibold leading-6 text-gray-900") Home
          a(href="/membership", class="text-sm font-semibold leading-6 text-gray-900") Membership
      div(class="hidden lg:flex lg:flex-1 lg:justify-end")
        a(href="/logout", class="text-sm font-semibold leading-6 text-gray-900") Log out 
          <i class="fa-solid fa-right-to-bracket"></i>
  div(class="bg-white py-4")
    div(class="mx-auto max-w-7xl px-6 lg:px-8")
      div(class="mx-auto mt-4 max-w-2xl rounded-3xl ring-1 ring-gray-200 lg:mx-0 lg:flex lg:max-w-none")
        div(class="p-8 sm:p-10 lg:flex-auto")
          h3(class="text-2xl font-bold tracking-tight text-gray-900") Select Membership
          p(class="mt-6 text-base leading-7 text-gray-600") Below, you'll find our membership packages designed for reading articles and watching our videos.
          div(class="flex flex-col lg:flex-row justify-between p-2 mt-0 w-full gap-y-4")
            div(class="rounded-2xl bg-gray-50 py-10 text-center ring-1 ring-inset ring-gray-900/5 lg:flex lg:flex-col lg:justify-center lg:py-16 lg:basis-[30%]")
              div(class="mx-auto max-w-xs px-8")
                p(class="text-base font-semibold text-gray-600") Bronze
                p(class="mt-6 flex items-baseline justify-center gap-x-2")
                  span(class="text-5xl font-bold tracking-tight text-gray-900")
                    i(class="fa-solid fa-star text-amber-900")
                if variant == 'none'
                  form(class="space-y-6", action=`/membership?id=${doc_id}&variant=bronze`, method="POST")
                    button(type="submit", class="mt-10 block w-full rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600") Get access
                else if variant != 'bronze'
                  form(class="space-y-6", action=`/membership?id=${doc_id}&variant=bronze`, method="POST")
                    button(type="submit", class="mt-10 block w-full rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600") Update Membership
                else
                  p(class='mt-10 text-base font-semibold text-gray-600') Current Membership
                p(class="mt-6 text-xs leading-5 text-gray-600") 3 Articles and 3 Videos
            div(class="rounded-2xl bg-gray-50 py-10 text-center ring-1 ring-inset ring-gray-900/5 lg:flex lg:flex-col lg:justify-center lg:py-16 lg:basis-[30%]")
              div(class="mx-auto max-w-xs px-8")
                p(class="text-base font-semibold text-gray-600") Silver
                p(class="mt-6 flex items-baseline justify-center gap-x-2")
                  span(class="text-5xl font-bold tracking-tight text-gray-900")
                    i(class="fa-solid fa-star text-gray-400")
                if variant == 'none'
                  form(class="space-y-6", action=`/membership?id=${doc_id}&variant=silver`, method="POST")
                    button(type="submit", class="mt-10 block w-full rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600") Get access
                else if variant != 'silver'
                  form(class="space-y-6", action=`/membership?id=${doc_id}&variant=silver`, method="POST")
                    button(type="submit", class="mt-10 block w-full rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600") Update Membership
                else
                  p(class='mt-10 text-base font-semibold text-gray-600') Current Membership
                p(class="mt-6 text-xs leading-5 text-gray-600") 10 Articles and 10 Videos
            div(class="rounded-2xl bg-gray-50 py-10 text-center ring-1 ring-inset ring-gray-900/5 lg:flex lg:flex-col lg:justify-center lg:py-16 lg:basis-[30%]")
              div(class="mx-auto max-w-xs px-8")
                p(class="text-base font-semibold text-gray-600") Gold
                p(class="mt-6 flex items-baseline justify-center gap-x-2")
                  span(class="text-5xl font-bold tracking-tight text-gray-900")
                    i(class="fa-solid fa-star text-yellow-600")
                if variant == 'none'
                  form(class="space-y-6", action=`/membership?id=${doc_id}&variant=gold`, method="POST")
                    button(type="submit", class="mt-10 block w-full rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600") Get access
                else if variant != 'gold'
                  form(class="space-y-6", action=`/membership?id=${doc_id}&variant=gold`, method="POST")
                    button(type="submit", class="mt-10 block w-full rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600") Get access
                else
                  p(class='mt-10 text-base font-semibold text-gray-600') Current Membership
                p(class="mt-6 text-xs leading-5 text-gray-600") All Articles and All Videos
